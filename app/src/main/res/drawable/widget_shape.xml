<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >
    <!-- 设置弧度 -->
    <corners android:radius="9dp" />
    <gradient
        android:angle="270"
        android:endColor="@color/colorTransparentDark"
        android:startColor="@color/colorTransparent" />
    <padding
        android:bottom="@dimen/def_padding_small"
        android:left="@dimen/def_padding"
        android:right="@dimen/def_padding"
        android:top="@dimen/def_padding_small" />
    <stroke
        android:dashGap="1dp"
        android:dashWidth="10dp"
        android:width="2dp"
        android:color="@color/colorTransparentDark" />
</shape>